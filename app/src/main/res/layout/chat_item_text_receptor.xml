<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <TextView
        android:visibility="gone"
        android:id="@+id/txt_day_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:layout_margin="8dp"
        android:background="@drawable/background_corner"
        android:padding="4dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_day_group"
        android:background="@drawable/balloom_receptor">

        <com.vanniktech.emoji.EmojiTextView
            android:id="@+id/txt_message"
            style="@style/chat_text_message_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:autoLink="web"
            android:maxWidth="280dp"
            android:paddingLeft="20dp"
            android:text="Hi dude what's up"
            android:textColor="@color/md_grey_900"
            android:textIsSelectable="true" />


        <TextView
            android:id="@+id/txt_time"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/txt_message"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/txt_message"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:text="06:66"
            android:textColor="@color/md_grey_600"
            android:textSize="12sp" />

    </RelativeLayout>

</RelativeLayout>