<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/md_grey_100">

            <de.hdodenhof.circleimageview.CircleImageView
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/imgProfile"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/ic_users"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imgProfile"
                android:layout_alignEnd="@+id/imgProfile"
                android:src="@drawable/ic_camera_alt_black_24dp"
                android:layout_alignRight="@+id/imgProfile" />

        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/inf.name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative">

            <RelativeLayout
                android:id="@+id/rl.child.second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginBottom="15dp"
                    android:id="@+id/txt.nameUser"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/scrool_view_margin_top"
                    android:text="luisrojas"
                    android:textColor="@color/md_grey_900"
                    android:textSize="15sp"
                    android:layout_marginLeft="16dp" />

                <ImageView
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:id="@+id/btn.edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/scrool_view_margin_top"
                    android:src="@drawable/ic_mode_edit_black_24dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:contentDescription="@string/action_change_background"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/scrool_view_margin_top" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <RelativeLayout
            android:id="@+id/idName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inf.name"
            android:background="@color/md_grey_100">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="22sp"
                android:padding="5dp"
                android:layout_marginTop="@dimen/scrool_view_margin_top"
                android:text="@string/profile.notice"
                android:layout_marginLeft="22sp" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/inf.telfs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idName"
            >


            <RelativeLayout
                android:id="@+id/rl.child.one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/txt.inf.telf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/md_keylines"
                    android:layout_marginTop="@dimen/view_margin_top_5dp"
                    android:text="Info y número de teléfono"
                    android:textColor="@color/colorPrimary"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:layout_marginLeft="@dimen/md_keylines" />


                <TextView
                    android:id="@+id/text.stated"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/txt.inf.telf"
                    android:layout_below="@+id/txt.inf.telf"
                    android:layout_marginTop="@dimen/view_margin_top_5dp"
                    android:text="This is awesome!"
                    android:padding="5dp"
                    android:textColor="@color/md_grey_900"
                    android:textSize="15sp"
                    android:layout_alignLeft="@+id/txt.inf.telf" />

                <View
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_below="@+id/text.stated"
                    android:layout_marginStart="@dimen/md_keylines"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@color/md_grey_200"
                    android:layout_marginLeft="@dimen/md_keylines" />

                <TextView
                    android:id="@+id/txt.phoneNumber"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/scrool_view_margin_top"
                    android:text="+51 963 108 545"
                    android:padding="5dp"
                    android:textColor="@color/md_grey_900"
                    android:textSize="15sp"
                    android:layout_marginLeft="16dp" />

            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>